{
  "root": true,
  "plugins": [
    "json-format"
  ],
  "overrides": [
    {
      "files": [
        "*.json"
      ],
      "parser": "jsonc-eslint-parser",
      "rules": {
        "json-format/require-space-after-colon": [
          "error",
          {
            "allowNewlines": false
          }
        ],
        "json/json": [
          "error",
          {
            "allowComments": true
          }
        ]
      }
    }
  ]
}
